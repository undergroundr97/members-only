<h2>Forgot your password?</h2>

<div class="recovery-password">
 <div class="recovery-title">Recovery!</div>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
  
    <div class="field">
      
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email', required:true%> <br>
    </div>
  
    <div class="actions">
      <%= f.submit "Send me reset password instructions", class: 'recovery-btn' %>
    </div>
  <% end %>
  
  <div class="alternate-links"><%= render "devise/shared/links" %></div>
</div>
