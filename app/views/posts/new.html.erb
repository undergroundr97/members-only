<% content_for :title, "New post" %>

<h1>New post</h1>

<%= form_with model: @post do |f|%>
<%= f.label :title, "Post Title"%>
<%= f.text_field :title%>
<%= f.label :content, "Description Field"%>
<%= f.text_field :content %>
<%= f.label :pettag, "Dog"%>
<%= f.radio_button :pettag, "Dog"%>
<%= f.label :pettag, "Cat"%>
<%= f.radio_button :pettag, "Cat"%>
<% %>
<%= f.submit %>
<%end%>

<%= button_to "Log Out", destroy_user_session_path, method: :delete, class: "btn btn-logout" %>