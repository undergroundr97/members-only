
<div id="all_posts">
<div class="post-title">
  <%= post.title.upcase %>
</div>
    <div class="post-content">
      <%= post.content %>
    </div>
  <div class="author-card-name">
    <% author = User.find(post.user_id)%>
        <strong>Author:</strong> 
        <span class="author-name <%= 'tooltip' if !user_signed_in?%>">
          <span class="<%= 'tooltiptext' if !user_signed_in?%>"> <%= user_signed_in? ? "" : "Log in to see the author!"%></span>

           <span class="<%= 'blur' if !user_signed_in?%>"><%= author.name%></span>
           
        </span> 
  </div>
 
</div>
